<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lacie.tp_projects.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:layout_above="@id/buttonPanel"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPanel"
        android:layout_alignParentBottom="true">
        <TableRow>
            <Button
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/but1"
                android:layout_width="0dp"/>
            <Button
                android:id="@+id/but2"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:layout_width="0dp"/>
            <Button
                android:id="@+id/but3"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:layout_width="3dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/but4"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:layout_width="0dp"/>
            <Button
                android:id="@+id/but5"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:layout_width="0dp"/>
            <Button
                android:id="@+id/but6"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:layout_width="3dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/but7"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:layout_width="0dp"/>
            <Button
                android:id="@+id/but8"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:layout_width="0dp"/>
            <Button
                android:id="@+id/but9"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:layout_width="3dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/but_clear"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:layout_width="0dp"/>
            <Button
                android:id="@+id/but0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:layout_width="0dp"/>
            <Button
                android:id="@+id/butDel"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Del"
                android:layout_width="3dp"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
